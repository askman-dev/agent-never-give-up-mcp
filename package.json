{
	"name": "agent-never-give-up-mcp",
	"version": "0.1.0",
	"mcpName": "io.github.askman-dev/agent-never-give-up",
	"description": "An MCP server that acts as an escape guide for AI coding agents, providing structured thinking protocols to help agents unstick themselves without human help.",
	"repository": {
		"type": "git",
		"url": "https://github.com/askman-dev/agent-never-give-up-mcp.git"
	},
  "scripts": {
    "deploy": "wrangler deploy",
    "prepare": "npm run generate:scenarios",
    "predev": "npm run generate:scenarios",
    "dev": "wrangler dev",
    "setup:pre-commit": "bash scripts/install-pre-commit-hook.sh",
    "prestart": "npm run generate:scenarios",
    "start": "wrangler dev",
    "prebuild": "npm run generate:scenarios",
    "build": "wrangler build",
    "check:prompts": "node scripts/check-prompts.js",
    "format": "biome format --write",
    "lint:fix": "biome lint --fix",
    "cf-typegen": "wrangler types",
    "pretype-check": "npm run generate:scenarios",
    "type-check": "tsc --noEmit",
    "pretest:mcp": "npm run generate:scenarios",
    "test:mcp": "tsx tests/test-mcp-server.ts",
    "generate:scenarios": "tsx scripts/generate-scenarios.ts",
    "publish:npm": "npm publish --access public",
    "publish:mcp": "mcp-publisher login github && mcp-publisher publish",
    "release": "npm run publish:npm && npm run publish:mcp"
  },
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.1.55",
		"@modelcontextprotocol/sdk": "^1.22.0",
		"agents": "^0.2.19",
		"dotenv": "^17.2.3",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/node": "^24.10.1",
		"tsx": "^4.20.6",
		"typescript": "5.9.3",
		"wrangler": "^4.51.0"
	}
}
